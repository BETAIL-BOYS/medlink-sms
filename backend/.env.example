# MedLink SMS Environment Configuration
# Copy this file to .env and fill in your actual values

# Security (REQUIRED)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Africa's Talking API Credentials (REQUIRED)
# Get from: https://account.africastalking.com/
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./medlink.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
